    <![endif]-->
</head>

<body>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        var name = localStorage.getItem("option") + localStorage.getItem("emotion");
        console.log(name);
        setInterval(function () {
            $('#emotionImage1').show(1000);
            $('#emotionImage2').hide();
            $('#emotionImage3').hide();
            setTimeout(function () {
                $('#emotionImage1').hide();
                $('#emotionImage2').show(1000);
            }, 3000);
            setTimeout(function () {
                $('#emotionImage2').hide();
                $('#emotionImage3').show(1000);
            }, 6000);
        }, 9000);


    </script>
    <div id="header">
        <span class="dot" onclick="home()"></span>
        <h2 align="center">You are about to do a breathing exercise</h2>
    </div>
    <script>
        function home() {
            //click to go to home page
            location.href = "home";
        }
    </script>
    <audio autoplay>
        <source src={{musicURL}}>
    </audio>
    <img id='emotionImage1' src={{imageURL1}}>
    <img id='emotionImage2' src={{imageURL2}}>
    <img id='emotionImage3' src={{imageURL3}}>
</body>

<footer>
    <button id="start" type="button" onclick="start()">Start</button>
    <script>
        function start() {
            location.href = "Breathing";
        }
    </script>
</footer>

</html>